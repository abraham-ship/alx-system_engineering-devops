#!/usr/bin/env bash
# install and configure HAproxy on server using roundrobin algorithm

sudo apt-get install --no-install-recommends software-properties-common -y
sudo add-apt-repository ppa:vbernat/haproxy-2.0 -y
sudo apt-get update -y
sudo apt-get install haproxy=2.0.\* -y


echo "
frontend server
        bind *:80
	mode http
	default_backend web_backend

backend web_backend
	mode http
	balance roundrobin
	server web-01 35.174.211.53:80 check
	server web-02 54.209.215.209:80 check" | sudo tee -a
	/etc/haproxy/haproxy.cfg

sudo haproxy -c -f /etc/haproxy/haproxy.cfg
sudo service haproxy start
